<div class ="container">
    <div class="row text-center" id="top">
        <h1>EAT DA BURGER!</h1>
    </div>
        <div class="col-md-6 text-left">
            <h2>Burgers Remaining</h2>
                <ul>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                        <h3>{{this.id}}. {{this.burger_name}}</h3>

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <button type="submit" class="btn btn-default">DEVOUR IT</button>
                            </form>
                        {{/unless}}
                    {{/each}}
                </ul>
        </div>

        <div class="col-md-6 text-left"></div>
            <h2>Burgers Devoured</h2>
                <ul>
                    {{#each burgers}}
                        {{#if this.devoured}}
                        <h3>{{this.id}}. {{this.burger_name}}</h3>
                        {{/if}}
                    {{/each}}
                </ul>
        </div>

        <div class= "container">
        <div class="col-md-3"></div>
            
        <div class="col-md-6 text-center">
            <h3>Hungry for a different burger? Enter below:</h3>  
            <form class="addburger" action="/" method="POST">
                <input type="textbox" class="form-control col-md-4" name="newBurger" maxlength="100">
                <span class="addburger-btn">
                    <br>
                    <button type="submit" class="btn btn-default">ADD BURGER</button> 
                </span>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
