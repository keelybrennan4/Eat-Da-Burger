<div class ="container">
    <div class="row text-center" id="top">
        <h1>EAT DA BURGER!</h1>
    </div>
        <div class="col-md-6 text-left">
            <h2>Burgers Remaining</h2>
                <ul>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                        <h3>{{this.id}}. {{this.burger_name}}</h3>

                    <form method="PUT" action="/api/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_name" type="text" value="{{this.id}}">
                        <br>
                        <button type="submit" class="btn btn-default">DEVOUR IT</button>   
                    </form>
                    {{/unless}}
                    {{/each}}
                </ul>
        </div>

        <div class="col-md-6 text-left"></div>
            <h2>Burgers Devoured</h2>
                <ul>
                    {{#each burgers}}
                        {{#if this.devoured}}
                        <h3>{{this.id}}. {{this.burger_name}}</h3>
                        {{/if}}
                    {{/each}}
                </ul>
        </div>

        <div class= "container">
        <div class="col-md-3"></div>
            
        <div class="col-md-6 text-center">
            <h3>Hungry for a different burger? Enter below:</h3>  
            <form id="addburger" method="POST">
                <textarea  type="text" name="burger_name"></textarea>
                <br>
            <button type="submit" class="btn btn-default">ADD BURGER</button> 
            </form>
        </div>

        <div class="col-md-3"></div>
    </div>
</div>
